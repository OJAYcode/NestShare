@model Thrift.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-indigo-50 py-6">
    <div class="container mx-auto px-4">
        <!-- Header Section -->
        <div class="text-center mb-8 animate-fadeInUp">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-br from-red-500 to-pink-600 text-white mb-4 shadow-lg">
                <i class="fas fa-key text-2xl"></i>
            </div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-red-600 via-pink-600 to-purple-600 bg-clip-text text-transparent mb-2">
                Change Password
            </h1>
            <p class="text-gray-600 text-lg max-w-2xl mx-auto">
                Update your account password to keep your data secure
            </p>
        </div>

        <!-- Status Message -->
        @if (TempData["StatusMessage"] != null)
        {
            <div class="max-w-2xl mx-auto mb-6 animate-fadeInUp">
                <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-check-circle text-green-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-green-800">
                                @TempData["StatusMessage"]
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Main Change Password Form -->
        <div class="max-w-2xl mx-auto animate-fadeInUp" style="animation-delay: 0.1s;">
            <div class="bg-white/80 backdrop-blur-sm border border-white/50 rounded-2xl shadow-xl overflow-hidden">
                <!-- Form Header -->
                <div class="bg-gradient-to-r from-red-500 to-pink-600 p-6 text-white">
                    <h2 class="text-2xl font-semibold flex items-center">
                        <i class="fas fa-shield-alt mr-3"></i>
                        Password Security
                    </h2>
                    <p class="text-red-100 mt-1">Create a strong password to protect your account</p>
                </div>

                <!-- Form Content -->
                <div class="p-8">
                    <form asp-action="ChangePassword" method="post" class="space-y-6">
                        <div asp-validation-summary="ModelOnly" class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md text-red-700 mb-6"></div>
                        
                        <!-- Current Password -->
                        <div class="space-y-2">
                            <label asp-for="OldPassword" class="block text-sm font-semibold text-gray-700">Current Password</label>
                            <div class="relative">
                                <input asp-for="OldPassword" type="password"
                                       class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-white/70 backdrop-blur-sm pl-12"
                                       placeholder="Enter your current password..." />
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <i class="fas fa-lock text-gray-400"></i>
                                </div>
                            </div>
                            <span asp-validation-for="OldPassword" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- New Password -->
                        <div class="space-y-2">
                            <label asp-for="NewPassword" class="block text-sm font-semibold text-gray-700">New Password</label>
                            <div class="relative">
                                <input asp-for="NewPassword" type="password"
                                       class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-white/70 backdrop-blur-sm pl-12"
                                       placeholder="Enter your new password..." />
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <i class="fas fa-key text-gray-400"></i>
                                </div>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Confirm New Password -->
                        <div class="space-y-2">
                            <label asp-for="ConfirmPassword" class="block text-sm font-semibold text-gray-700">Confirm New Password</label>
                            <div class="relative">
                                <input asp-for="ConfirmPassword" type="password"
                                       class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-transparent transition-all duration-200 bg-white/70 backdrop-blur-sm pl-12"
                                       placeholder="Confirm your new password..." />
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <i class="fas fa-check text-gray-400"></i>
                                </div>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Password Requirements -->
                        <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                            <div class="flex items-center space-x-3 mb-3">
                                <div class="w-6 h-6 rounded-full bg-blue-100 flex items-center justify-center">
                                    <i class="fas fa-info text-blue-600 text-xs"></i>
                                </div>
                                <h4 class="text-sm font-semibold text-blue-900">Password Requirements</h4>
                            </div>
                            <ul class="text-sm text-blue-800 space-y-1 ml-9">
                                <li class="flex items-center">
                                    <i class="fas fa-check-circle text-blue-500 mr-2 text-xs"></i>
                                    At least 8 characters long
                                </li>
                                <li class="flex items-center">
                                    <i class="fas fa-check-circle text-blue-500 mr-2 text-xs"></i>
                                    Include at least one uppercase letter
                                </li>
                                <li class="flex items-center">
                                    <i class="fas fa-check-circle text-blue-500 mr-2 text-xs"></i>
                                    Include at least one lowercase letter
                                </li>
                                <li class="flex items-center">
                                    <i class="fas fa-check-circle text-blue-500 mr-2 text-xs"></i>
                                    Include at least one number
                                </li>
                                <li class="flex items-center">
                                    <i class="fas fa-check-circle text-blue-500 mr-2 text-xs"></i>
                                    Include at least one special character
                                </li>
                            </ul>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                            <button type="submit" 
                                    class="flex-1 bg-gradient-to-r from-red-600 to-pink-600 text-white px-8 py-4 rounded-xl font-semibold hover:from-red-700 hover:to-pink-700 transform hover:scale-[1.02] transition-all duration-200 shadow-lg hover:shadow-xl flex items-center justify-center space-x-2">
                                <i class="fas fa-save"></i>
                                <span>Update Password</span>
                            </button>
                            
                            <a asp-action="Profile"
                               class="flex-1 bg-white border-2 border-gray-300 text-gray-700 px-8 py-4 rounded-xl font-semibold hover:border-gray-400 transform hover:scale-[1.02] transition-all duration-200 flex items-center justify-center space-x-2">
                                <i class="fas fa-arrow-left"></i>
                                <span>Back to Profile</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Security Tips -->
        <div class="max-w-2xl mx-auto mt-8 animate-fadeInUp" style="animation-delay: 0.2s;">
            <div class="bg-gradient-to-r from-yellow-50 to-orange-50 border border-yellow-200 rounded-2xl p-6">
                <div class="flex items-center space-x-3 mb-4">
                    <div class="w-8 h-8 rounded-full bg-yellow-100 flex items-center justify-center">
                        <i class="fas fa-lightbulb text-yellow-600"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-yellow-900">Security Tips</h3>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-yellow-800">
                    <div class="flex items-start space-x-2">
                        <i class="fas fa-shield-alt text-yellow-500 mt-0.5"></i>
                        <span>Use a unique password for your account</span>
                    </div>
                    <div class="flex items-start space-x-2">
                        <i class="fas fa-clock text-yellow-500 mt-0.5"></i>
                        <span>Change your password regularly</span>
                    </div>
                    <div class="flex items-start space-x-2">
                        <i class="fas fa-eye-slash text-yellow-500 mt-0.5"></i>
                        <span>Don't share your password with anyone</span>
                    </div>
                    <div class="flex items-start space-x-2">
                        <i class="fas fa-mobile-alt text-yellow-500 mt-0.5"></i>
                        <span>Consider using a password manager</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        @@keyframes fadeInUp {
            from { 
                opacity: 0; 
                transform: translateY(20px);
            }
            to { 
                opacity: 1; 
                transform: translateY(0);
            }
        }
        
        .animate-fadeInUp {
            animation: fadeInUp 0.8s ease-out forwards;
        }
    </style>
}
