@model Thrift.Models.ViewModels.BudgetViewModel
@{
    ViewData["Title"] = "Edit Budget";
}

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-gray-100 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-8">
            <nav class="flex mb-3" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a asp-controller="Budget" asp-action="Index" class="inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-900">
                            <i class="fas fa-file-invoice-dollar mr-2"></i>
                            Budgets
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 mx-2 text-xs"></i>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="text-sm font-medium text-gray-500 hover:text-blue-600">
                                @Model.Name
                            </a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 mx-2 text-xs"></i>
                            <span class="text-sm font-medium text-gray-500">Edit Budget</span>
                        </div>
                    </li>
                </ol>
            </nav>
            
            <h1 class="text-3xl font-bold text-gray-900">
                <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">
                    Edit Budget: @Model.Name
                </span>
            </h1>
            <p class="mt-2 text-gray-600">Update your budget details</p>
        </div>
        
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-indigo-50 border-b">
                <h2 class="text-xl font-semibold text-gray-900">Budget Details</h2>
            </div>
            <div class="p-6">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                        <div>
                            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Budget Name</label>
                            <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-accent focus:border-accent" />
                            <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
                        </div>
                        
                        <div>
                            <label asp-for="Month" class="block text-sm font-medium text-gray-700 mb-1">Month</label>
                            <input asp-for="Month" type="month" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-accent focus:border-accent" />
                            <span asp-validation-for="Month" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                    
                    <div class="mb-8">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Income</h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="TotalIncome" class="block text-sm font-medium text-gray-700 mb-1">Monthly Take-Home Pay</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="TotalIncome" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="TotalIncome" class="text-red-500 text-xs"></span>
                            </div>
                            
                            <div>
                                <label asp-for="AdditionalIncome" class="block text-sm font-medium text-gray-700 mb-1">Additional Income</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="AdditionalIncome" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="AdditionalIncome" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Side hustles, investments, etc.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-8">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Expenses</h3>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div>
                                <label asp-for="HousingExpenses" class="block text-sm font-medium text-gray-700 mb-1">Housing</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="HousingExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="HousingExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Rent/mortgage, property tax, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="UtilitiesExpenses" class="block text-sm font-medium text-gray-700 mb-1">Utilities</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="UtilitiesExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="UtilitiesExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Electricity, water, gas, internet, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="TransportationExpenses" class="block text-sm font-medium text-gray-700 mb-1">Transportation</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="TransportationExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="TransportationExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Car payments, fuel, public transit, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="FoodExpenses" class="block text-sm font-medium text-gray-700 mb-1">Food</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="FoodExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="FoodExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Groceries, dining out, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="HealthcareExpenses" class="block text-sm font-medium text-gray-700 mb-1">Healthcare</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="HealthcareExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="HealthcareExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Insurance, medications, doctor visits, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="EntertainmentExpenses" class="block text-sm font-medium text-gray-700 mb-1">Entertainment</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="EntertainmentExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="EntertainmentExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Streaming services, events, hobbies, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="PersonalExpenses" class="block text-sm font-medium text-gray-700 mb-1">Personal</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="PersonalExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PersonalExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Clothing, personal care, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="SavingsAllocation" class="block text-sm font-medium text-gray-700 mb-1">Savings</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="SavingsAllocation" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="SavingsAllocation" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Emergency fund, investments, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="DebtPayment" class="block text-sm font-medium text-gray-700 mb-1">Debt Payment</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="DebtPayment" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="DebtPayment" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Credit cards, loans, etc.</p>
                            </div>
                            
                            <div>
                                <label asp-for="OtherExpenses" class="block text-sm font-medium text-gray-700 mb-1">Other Expenses</label>
                                <div class="relative rounded-md shadow-sm">
                                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                        <span class="text-gray-500 sm:text-sm">$</span>
                                    </div>
                                    <input asp-for="OtherExpenses" type="number" step="0.01" min="0" class="focus:ring-accent focus:border-accent block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="OtherExpenses" class="text-red-500 text-xs"></span>
                                <p class="mt-1 text-xs text-gray-500">Any other expenses not covered above.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-8">
                        <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
                        <textarea asp-for="Notes" rows="3" class="focus:ring-accent focus:border-accent block w-full sm:text-sm border-gray-300 rounded-md"></textarea>
                        <span asp-validation-for="Notes" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div class="flex justify-end space-x-3">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent">
                            Cancel
                        </a>
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-accent hover:bg-accent-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
