@section Scripts {
<script>
    // Simple chat interaction demo
    document.addEventListener('DOMContentLoaded', function() {
        const chatForm = document.getElementById('chat-form');
        const userInput = document.getElementById('user-input');
        const chatContainer = document.getElementById('chat-container');
        
        chatForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (userInput.value.trim() === '') return;
            
            // Add user message
            const userMessage = `
                <div class="flex items-start mb-4 justify-end">
                    <div class="mr-3 bg-accent text-white rounded-lg px-4 py-3 max-w-md shadow-sm">
                        <p class="text-sm">${userInput.value}</p>
                    </div>
                    <div class="flex-shrink-0 h-9 w-9 rounded-full bg-gray-300 flex items-center justify-center">
                        <i class="fas fa-user text-sm text-gray-600"></i>
                    </div>
                </div>
            `;
            
            chatContainer.insertAdjacentHTML('beforeend', userMessage);
            
            // Simulate AI response (in a real app, this would be an API call)
            setTimeout(() => {
                const aiResponses = [
                    "Based on your current spending patterns, I recommend reducing your entertainment budget by 15% to meet your savings goal.",
                    "I've analyzed your accounts and found that you might be paying for duplicate streaming services. Would you like me to show you the details?",
                    "Your electricity bill has been increasing over the past three months. I can help you identify potential causes and suggest ways to reduce it.",
                    "Great news! You're on track to reach your vacation savings goal by June. Keep up the good work!",
                    "I've detected an unusual transaction of $89.99 from yesterday. Does this look familiar to you?"
                ];
                
                const randomResponse = aiResponses[Math.floor(Math.random() * aiResponses.length)];
                
                const aiMessage = `
                    <div class="flex items-start mb-4">
                        <div class="flex-shrink-0 h-9 w-9 rounded-full bg-gradient-to-r from-green-500 to-teal-500 flex items-center justify-center text-white">
                            <i class="fas fa-robot text-sm"></i>
                        </div>
                        <div class="ml-3 bg-white rounded-lg px-4 py-3 max-w-md shadow-sm">
                            <p class="text-sm text-gray-800">${randomResponse}</p>
                        </div>
                    </div>
                `;
                
                chatContainer.insertAdjacentHTML('beforeend', aiMessage);
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }, 1000);
            
            userInput.value = '';
            chatContainer.scrollTop = chatContainer.scrollHeight;
        });
    });
</script>
