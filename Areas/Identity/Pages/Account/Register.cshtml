            // Enhanced password strength indicator with animations and tips
            const passwordInput = document.querySelector('input[name="Input.Password"]');
            const passwordStrengthIndicator = document.querySelector('.strength-indicator');
            const confirmPasswordInput = document.querySelector('input[name="Input.ConfirmPassword"]');
            const passwordsMatchIcon = document.querySelector('.passwords-match');
            
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                let strength = 0;
                let color = 'bg-red-500';
                
                if (password.length >= 8) strength += 1;
                if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength += 1;
                if (password.match(/\d/)) strength += 1;
                if (password.match(/[^a-zA-Z\d]/)) strength += 1;
                
                // Set color based on strength
                if (strength === 0) color = 'bg-gray-300';
                else if (strength === 1) color = 'bg-red-500';
                else if (strength === 2) color = 'bg-yellow-500';
                else if (strength === 3) color = 'bg-green-500';
                else if (strength === 4) color = 'bg-emerald-500';
                
                // Animate width change
                passwordStrengthIndicator.className = `strength-indicator h-full transition-all duration-300 ${color}`;
                passwordStrengthIndicator.style.width = (25 * strength) + '%';
                
                // Check if passwords match when both have values
                if (confirmPasswordInput.value.length > 0) {
                    checkPasswordsMatch();
                }
            });
            
            // Check if passwords match
            confirmPasswordInput.addEventListener('input', checkPasswordsMatch);
            
            function checkPasswordsMatch() {
                if (passwordInput.value === confirmPasswordInput.value && confirmPasswordInput.value.length > 0) {
                    passwordsMatchIcon.classList.remove('hidden');
                } else {
                    passwordsMatchIcon.classList.add('hidden');
                }
            }
            
            // Email validation with real-time feedback
            const emailInput = document.querySelector('input[name="Input.Email"]');
