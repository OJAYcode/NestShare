                    // Fix this line too
                    const group = this.closest('.group');
                    if (group) group.classList.remove('scale-[1.01]');
                });
            });
            
            // Animated 3D card effect
            const card = document.querySelector('.card-inner');
            const container = document.querySelector('.perspective-1000');
            
            if (card && container) {
                container.addEventListener('mousemove', function(e) {
                    const rect = container.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    
                    const rotateY = (x - centerX) / 50;
                    const rotateX = (centerY - y) / 50;
                    
                    card.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(0.99)`;
                });
                
                container.addEventListener('mouseleave', function() {
                    card.style.transform = 'rotateX(0) rotateY(0) scale(1)';
                });
            }
