@page
@model Thrift.Areas.Identity.Pages.Account.Manage.IndexModel
@using Thrift.Areas.Identity.Pages.Account.Manage
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="space-y-6">
    <!-- Header Section -->
    <div class="flex items-center justify-between">
        <h2 class="text-2xl font-bold text-gray-900">
            <span class="inline-block bg-clip-text text-transparent bg-gradient-to-r from-accent to-purple-600">
                Your Profile
            </span>
        </h2>
        <span class="px-3 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">
            Active Account
        </span>
    </div>
    
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <!-- Profile Card -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-100 transition-all duration-300 hover:shadow-lg">
        <div class="px-6 py-5 border-b border-gray-100 bg-gradient-to-r from-purple-50 to-blue-50">
            <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                <div class="flex items-center">
                    <div class="h-14 w-14 rounded-full bg-gradient-to-br from-accent to-purple-500 flex items-center justify-center shadow-md">
                        <svg class="h-8 w-8 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-lg font-semibold text-gray-900">@Model.Username</h3>
                        <p class="text-sm text-gray-600">Member since @DateTime.Now.AddMonths(-3).ToString("MMMM yyyy")</p>
                    </div>
                </div>
                <div class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                    Verified Account
                </div>
            </div>
        </div>
        
        <div class="p-6">
            <form id="profile-form" method="post" class="space-y-5">
                <div asp-validation-summary="ModelOnly" class="p-4 mb-4 text-sm rounded-lg bg-red-50 text-red-800" role="alert"></div>
                
                <!-- Username Field -->
                <div class="space-y-1">
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700">Username</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input asp-for="Username" 
                               class="block w-full pl-10 pr-12 py-3 border border-gray-300 rounded-lg focus:ring-accent focus:border-accent bg-gray-50 cursor-not-allowed opacity-75" 
                               placeholder="Your username" 
                               disabled />
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <span class="text-xs text-gray-500 bg-gray-100 px-2 py-0.5 rounded">Locked</span>
                        </div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Username cannot be changed once set.</p>
                </div>
                
                <!-- Email Field (example addition) -->
                <div class="space-y-1">
                    <label class="block text-sm font-medium text-gray-700">Email</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                            </svg>
                        </div>
                        <input type="email" 
                               class="block w-full pl-10 pr-12 py-3 border border-gray-300 rounded-lg bg-gray-50 cursor-not-allowed opacity-75" 
                               value="@(Model.Username)" 
                               disabled />
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <span class="inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <svg class="-ml-0.5 mr-1 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
                                    <circle cx="4" cy="4" r="3" />
                                </svg>
                                Verified
                            </span>
                        </div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500">To change email, visit the <a href="#" class="text-accent hover:text-accent-dark">Email settings page</a>.</p>
                </div>
                
                <!-- Phone Field -->
                <div class="space-y-1">
                    <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                    <div class="relative rounded-md shadow-sm">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                            </svg>
                        </div>
                        <input asp-for="Input.PhoneNumber" 
                               class="block w-full pl-10 py-3 border border-gray-300 rounded-lg focus:ring-accent focus:border-accent bg-white transition-all duration-300 focus:shadow-md" 
                               placeholder="+1 (555) 123-4567" />
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-sm text-red-600"></span>
                    <p class="mt-1 text-xs text-gray-500">Your phone number is used for SMS verification and recovery.</p>
                </div>
                
                <!-- Additional Fields Section -->
                <div class="pt-5 border-t border-gray-200">
                    <h4 class="text-sm font-medium text-gray-700 mb-3">Optional Information</h4>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- First Name -->
                        <div class="space-y-1">
                            <label class="block text-sm font-medium text-gray-700">First Name</label>
                            <input type="text" 
                                  class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-accent focus:border-accent" 
                                  placeholder="John" />
                        </div>
                        
                        <!-- Last Name -->
                        <div class="space-y-1">
                            <label class="block text-sm font-medium text-gray-700">Last Name</label>
                            <input type="text" 
                                  class="block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-accent focus:border-accent" 
                                  placeholder="Doe" />
                        </div>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <div class="pt-5">
                    <button id="update-profile-button" 
                            type="submit" 
                            class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent transition-all duration-300 transform hover:scale-[1.02]">
                        <svg class="-ml-1 mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Tips & Information Card -->
    <div class="bg-blue-50 rounded-xl p-5 border border-blue-100 shadow-sm">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-blue-800">Profile Completion Tips</h3>
                <div class="mt-2 text-sm text-blue-700">
                    <p>A complete profile helps personalize your experience. Consider adding:</p>
                    <ul class="list-disc pl-5 mt-1 space-y-1">
                        <li>A profile picture</li>
                        <li>Your phone number for security</li>
                        <li>Personal information for better recommendations</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Subtle animation for form elements on focus
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('ring-2', 'ring-purple-100');
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('ring-2', 'ring-purple-100');
            });
        });
    </script>
}
