@page
@model Thrift.Areas.Identity.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Check Your Email";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg text-center">
                <div class="h-2 bg-gradient-to-r from-purple-500 via-indigo-500 to-purple-500"></div>
                <div class="card-body py-5">
                    <!-- Success icon -->
                    <div class="d-flex justify-content-center mb-4">
                        <div class="rounded-circle p-3 bg-success-light">
                            <svg class="h-8 w-8 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                    </div>
                    
                    <h2 class="card-title mb-3 fw-bold">@ViewData["Title"]</h2>
                    <div class="card-text mb-4">
                        <p class="mb-3">We've sent a password reset link to your email address.</p>
                        <p class="text-muted">Please check your inbox and follow the instructions to reset your password. The link will expire in 24 hours.</p>
                    </div>
                    
                    <!-- Email illustration -->
                    <div class="d-flex justify-content-center my-4">
                        <img src="https://cdn-icons-png.flaticon.com/512/6357/6357048.png" alt="Email sent" class="img-fluid" style="max-height: 150px;">
                    </div>
                    
                    <div class="alert alert-light border mt-4 d-flex align-items-center" role="alert">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        <div>
                            <small>Don't see the email? Check your spam folder or contact support if you need assistance.</small>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        <a asp-page="./Login" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i> Return to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom styles */
    .bg-success-light {
        background-color: rgba(25, 135, 84, 0.15);
    }
    
    .text-success {
        color: #198754;
    }
    
    .bg-gradient-to-r {
        background: linear-gradient(to right, var(--from), var(--via), var(--to));
    }
    
    .from-purple-500 {
        --from: #a855f7;
    }
    
    .via-indigo-500 {
        --via: #6366f1;
    }
    
    .to-purple-500 {
        --to: #a855f7;
    }
    
    .h-8 {
        height: 2rem;
    }
    
    .w-8 {
        width: 2rem;
    }
    
    /* Override for outline button to match theme */
    .btn-outline-primary {
        color: #8b5cf6;
        border-color: #8b5cf6;
    }
    
    .btn-outline-primary:hover {
        background-color: #8b5cf6;
        border-color: #8b5cf6;
        color: white;
    }
    
    .text-primary {
        color: #8b5cf6 !important;
    }
</style>
